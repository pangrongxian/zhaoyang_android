<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.im.TextMsg" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.MessageAdapter" />
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.doctor.sun.ui.widget.BezelImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_2"
            android:scaleType="centerCrop"
            android:src="@{adapter.yourAvatar}"
            app:maskDrawable="@drawable/circle_mask"
            app:placeHolder="@{@drawable/default_avatar}" />

        <TextView
            android:text="@{data.body}"
            android:background="@drawable/bg_sent_msg"
            android:textSize="@dimen/font_13"
            android:textColor="#363636"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>