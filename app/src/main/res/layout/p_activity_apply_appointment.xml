<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.doctor" />

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_header"
            bind:header="@{header}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lly_medical_record"
                    android:background="@drawable/ripple_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_13"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_68"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_14"
                        android:src="@drawable/ic_medical_record" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="当前病历"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_medcialRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_15" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="#ebf0f3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="预约详细"
                    android:textColor="#a2aaae"
                    android:textSize="@dimen/font_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.doctor.sun.ui.widget.BezelImageView
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_11"
                        android:scaleType="centerCrop"
                        android:src="@{data.avatar}"
                        app:maskDrawable="@drawable/circle_mask" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_272"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_11">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_18"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{data.name}"
                                android:textColor="#363636"
                                android:textSize="@dimen/font_15" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <RatingBar
                                style="@style/SmallRatingBarCenter"
                                android:layout_marginRight="@dimen/dp_15"
                                android:numStars="5"
                                android:rating="@{data.point}" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:background="@drawable/shape_test"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_4"
                            android:singleLine="true"
                            android:text="@{data.level}"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/font_9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_13"
                            android:layout_marginTop="@dimen/dp_3"
                            android:minHeight="@dimen/dp_13"
                            android:singleLine="false"
                            android:text="@{data.getLocate}"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_13" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_111"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_weight="1"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15"
                        app:html="@{@string/should_pay(data.money)}" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="#ebf0f3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="支付方式"
                    android:textColor="#a2aaae"
                    android:textSize="@dimen/font_15" />

                <RadioGroup
                    android:id="@+id/rg_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_137"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/ic_alipay"
                        android:drawablePadding="@dimen/dp_7"
                        android:drawableRight="@drawable/ic_circle_tick"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:text="支付宝快捷支付"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#c1cacf" />

                    <RadioButton
                        android:id="@+id/rb_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/ic_wechat_pay"
                        android:drawablePadding="@dimen/dp_7"
                        android:drawableRight="@drawable/ic_circle_tick"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:text="微信支付"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <FrameLayout
                    android:layout_width="@dimen/dp_283"
                    android:layout_height="@dimen/dp_49"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_38"
                    android:layout_marginTop="@dimen/dp_17"
                    android:background="@drawable/shape_button">

                    <TextView
                        android:id="@+id/tv_apply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_default"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_17" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>