<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.MedicalRecord" />

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_header"
            bind:header="@{header}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_68"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_14"
                        android:src="@drawable/ic_medical_record" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="当前病历"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:text="@{data.getRecordDetail}"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_15" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_enter" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="#ebf0f3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="医生筛选"
                    android:textColor="#a2aaae"
                    android:textSize="@dimen/font_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_11"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:text="职称"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <com.doctor.sun.ui.widget.FlowLayout
                        android:id="@+id/fly_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="@{@dimen/dp_6}"
                        android:verticalSpacing="@{@dimen/dp_12}">

                        <TextView
                            android:id="@+id/tv_select1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="不限"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="主任/副主任医师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="主治医师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="心理质询师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="医师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_title5"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="心理治疗师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />


                    </com.doctor.sun.ui.widget.FlowLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="地域"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <LinearLayout
                        android:id="@+id/lly_location"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_37"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_select2"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_37"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:text="不限"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_location1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_18"
                            android:paddingRight="@dimen/dp_18"
                            android:text="@{data.province}"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_location2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_37"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_18"
                            android:paddingRight="@dimen/dp_18"
                            android:text="@{data.city}"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="性别"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <LinearLayout
                        android:id="@+id/lly_gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_37"
                        android:layout_marginBottom="@dimen/dp_18"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_select3"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_37"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:text="不限"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_gender1"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_37"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_18"
                            android:paddingRight="@dimen/dp_18"
                            android:text="男"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_gender2"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_37"
                            android:layout_marginRight="@dimen/dp_8"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_18"
                            android:paddingRight="@dimen/dp_18"
                            android:text="女"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:background="#ebf0f3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_13"
                    android:text="你愿意支付的紧急咨询费用（元/次/半小时）"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15" />

                <EditText
                    android:id="@+id/et_fee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@drawable/shape_rectangle_default"
                    android:hint="不小于1"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dp_12"
                    android:textColor="#363636"
                    android:textColorHint="#989898"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/dp_13"
                    android:text="*自动匹配诊金条件相近的医生"
                    android:textColor="#f76d02"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_13"
                    android:text="你愿意等待"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15" />

                <RadioGroup
                    android:id="@+id/rg_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_time"
                        android:layout_width="@dimen/dp_166"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_rectangle_default"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dp_12"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <RadioButton
                        android:id="@+id/rb_minute"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:button="@null"
                        android:drawableLeft="@drawable/ic_tick"
                        android:drawablePadding="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_27"
                        android:text="分"
                        android:textColor="@color/color_tick" />

                    <RadioButton
                        android:id="@+id/rb_hour"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:button="@null"
                        android:drawableLeft="@drawable/ic_tick"
                        android:drawablePadding="@dimen/dp_6"
                        android:paddingLeft="@dimen/dp_27"
                        android:text="小时"
                        android:textColor="@color/color_tick" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="#ebf0f3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="支付方式"
                    android:textColor="#a2aaae" />

                <RadioGroup
                    android:id="@+id/rg_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_135"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/ic_alipay"
                        android:drawablePadding="@dimen/dp_7"
                        android:drawableRight="@drawable/ic_circle_tick"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:text="支付宝快捷支付"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#c1cacf" />

                    <RadioButton
                        android:id="@+id/rb_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/ic_wechat_pay"
                        android:drawablePadding="@dimen/dp_7"
                        android:drawableRight="@drawable/ic_circle_tick"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:text="微信支付"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <FrameLayout
                    android:layout_width="@dimen/dp_283"
                    android:layout_height="@dimen/dp_49"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/shape_button">

                    <TextView
                        android:id="@+id/tv_apply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_default"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_17" />
                </FrameLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>