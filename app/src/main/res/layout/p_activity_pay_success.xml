<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="java.lang.String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88cb5a"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_32"
                android:background="@drawable/ic_pay_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:text="支付成功"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/dp_8"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/tv_system_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_success_tip"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:visibility="visible"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_39"
            android:layout_marginRight="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@{@string/tip(data)}"
            android:textColor="#363636"
            android:textSize="@dimen/dp_15" />

        <FrameLayout
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_49"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/shape_button">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:text="立即填写就诊前问卷"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_17" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_49"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/shape_rectangle_selected">

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="#339de1"
                android:textSize="@dimen/font_17" />

        </FrameLayout>

    </LinearLayout>
</layout>