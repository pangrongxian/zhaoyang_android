<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Time" />

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />

        <variable
            name="description"
            type="com.doctor.sun.entity.Description" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_header"
            bind:header="@{header}" />

        <RelativeLayout
            android:id="@+id/btn_bigin_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:background="@drawable/ripple_default"
            android:gravity="center_vertical"
            android:onClick="@{data.handler.beginTimeSet}">

            <TextView
                android:id="@+id/tv_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:singleLine="true"
                android:text="开始时间"
                android:textColor="#000000"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/tv_begin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_44"
                android:layout_toRightOf="@id/tv_begin"
                android:singleLine="true"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/font_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@drawable/ic_enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />


        <RelativeLayout
            android:id="@+id/btn_end_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:background="@drawable/ripple_default"
            android:gravity="center_vertical"
            android:onClick="@{data.handler.endTimeSet}">

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:singleLine="true"
                android:text="结束时间"
                android:textColor="#000000"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_44"
                android:layout_toRightOf="@id/tv_end"
                android:singleLine="true"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/font_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@drawable/ic_enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

        <RadioGroup
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_13"
                android:singleLine="true"
                android:text="就诊类型"
                android:textColor="#000000"
                android:textSize="@dimen/font_15" />


            <RadioButton
                android:id="@+id/rb_network"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_41"
                android:background="#00000000"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/ic_tick"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="详细就诊"
                android:textColor="@color/color_tick"
                android:textSize="@dimen/font_15" />

            <RadioButton
                android:id="@+id/rb_face"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#00000000"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/ic_tick"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="简捷复诊"
                android:textColor="@color/color_tick"
                android:textSize="@dimen/font_15" />

        </RadioGroup>

        <include
            layout="@layout/item_time_category"
            bind:data="@{description}" />

        <com.doctor.sun.ui.widget.FlowLayout
            android:id="@+id/fly_weeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_18"
            android:horizontalSpacing="@{@dimen/dp_11}"
            android:verticalSpacing="@{@dimen/dp_21}">

            <TextView
                android:id="@+id/btn_monday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期一"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/btn_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期二"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/btn_wesensday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期三"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/btn_thursday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期四"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/btn_friday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期五"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/btn_saturday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期六"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/btn_sunday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/ic_week_defalut"
                android:gravity="center"
                android:onClick="@{data.handler.select}"
                android:paddingEnd="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingStart="@dimen/dp_12"
                android:text="星期日"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/font_15" />

        </com.doctor.sun.ui.widget.FlowLayout>
    </LinearLayout>
</layout>