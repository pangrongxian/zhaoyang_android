<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.AppointMent" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_default"
        android:onClick="@{data.handler.historyDetail}"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_13">

            <com.doctor.sun.ui.widget.BezelImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_12"
                android:scaleType="centerCrop"
                android:src="@{data.doctor.avatar}"
                app:maskDrawable="@drawable/circle_mask"
                app:placeHolder="@{@drawable/default_avatar}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_13"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.doctor.name}"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <RatingBar
                        style="@style/SmallRatingBarCenter"
                        android:layout_marginRight="@dimen/dp_15"
                        android:numStars="5"
                        android:rating="@{data.changedoctorPoint}" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@drawable/shape_test"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:singleLine="true"
                    android:text="@{data.doctor.level}"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/font_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:singleLine="false"
                    android:text="@{data.doctor.getLocate}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginStart="@dimen/dp_13"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@{@string/AppointMent_time(data.handler.bookTime)}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@{@string/AppointMent_type(data.type)}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@{@string/record(data.recordName)}"
            android:textColor="#363636"
            android:textSize="@dimen/font_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#363636"
            android:textSize="@dimen/font_13"
            app:html="@{@string/money(data.money)}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#ebf0f3" />

    </LinearLayout>


</layout>