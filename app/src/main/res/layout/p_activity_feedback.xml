<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.AppointMent" />

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_default"
        android:orientation="vertical">


        <include
            layout="@layout/include_header"
            bind:header="@{header}" />

        <include
            layout="@layout/include_comment_doctor"
            bind:data="@{data.doctor}" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <include
            android:id="@+id/comment"
            layout="@layout/item_text_input4"
            bind:hint='@{"请输入您对医生的评价"}' />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c1cacf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35">

            <TextView
                android:layout_width="@dimen/dp_55"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="守时"
                android:textColor="#363636"
                android:textSize="@dimen/font_14" />

            <RatingBar
                android:id="@+id/rating_bar_0"
                style="@style/FeedbackRatingBar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:layout_width="@dimen/dp_55"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="专业"
                android:textColor="#363636"
                android:textSize="@dimen/font_14" />

            <RatingBar
                android:id="@+id/rating_bar_1"
                style="@style/FeedbackRatingBar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">

            <TextView
                android:layout_width="@dimen/dp_55"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="态度"
                android:textColor="#363636"
                android:textSize="@dimen/font_14" />

            <RatingBar
                android:id="@+id/rating_bar_2"
                style="@style/FeedbackRatingBar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_63"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="@dimen/dp_283"
                android:layout_height="@dimen/dp_49"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_big_blue">

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="确  定"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_17" />
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</layout>