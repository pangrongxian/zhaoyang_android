<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.Drug" />

    </data>

    <LinearLayout
        android:id="@+id/lly_druglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/order_create_time(data.createdAt)}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@{data.getStatuses}"
                    android:textSize="@dimen/font_13" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#363636"
                android:textSize="@dimen/font_13"
                app:html="@{@string/total(data.money)}" />

            <LinearLayout
                android:id="@+id/lly_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_21"
                    android:lineSpacingExtra="@dimen/dp_7"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:singleLine="false"
                    android:text="@{data.detail}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_logistic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_14"
                    android:paddingTop="@dimen/dp_14"
                    android:text="@{@string/logistic_detail(data.remark)}"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_13" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lly_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#c1cacf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_cancel"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/dp_11"
                        android:background="@drawable/btn_small_white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:text="取消寄药"
                            android:textColor="#339de1"
                            android:textSize="@dimen/font_13" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_pay"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/btn_small_blue">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_default"
                            android:gravity="center"
                            android:text="立即付款"
                            android:textColor="#fff"
                            android:textSize="@dimen/font_13" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:background="#ebf0f3" />

    </LinearLayout>
</layout>