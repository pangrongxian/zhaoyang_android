<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_header"
            app:header="@{header}" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_47"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_phone_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_11"
                        android:background="@drawable/ripple_default"
                        android:src="@drawable/ic_voice_call"
                        android:clickable="true" />
                </FrameLayout>

                <EditText
                    android:id="@+id/input_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_weight="1"
                    android:background="@drawable/bg_msg_input"
                    android:maxHeight="@dimen/dp_100" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_47"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>