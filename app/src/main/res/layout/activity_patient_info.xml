<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />

        <variable
            name="data"
            type="com.doctor.sun.entity.ContactDetail" />

        <variable
            name="patient"
            type="com.doctor.sun.entity.MedicalRecord" />

        <variable
            name="AppointMent"
            type="com.doctor.sun.entity.AppointMent" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_header"
            bind:header="@{header}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_168"
                    android:clipChildren="false"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-30dp"
                        android:background="@drawable/bg_person_info" />

                    <com.doctor.sun.ui.widget.BezelImageView
                        android:id="@+id/iv_person"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_16"
                        app:maskDrawable="@drawable/circle_mask" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_person"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/dp_5"
                        android:text="@{data.name}"
                        android:textColor="#898989"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:id="@+id/tv_gender_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_centerHorizontal="true"
                        android:text="@{@string/gender_birth(data.gender == 1 ? '男' : '女', data.birthday)}"
                        android:textColor="#898989"
                        android:textSize="@dimen/dp_15" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:id="@+id/rl_history_record"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_91"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:paddingLeft="@dimen/dp_13"
                    android:paddingRight="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_13">

                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:drawableLeft="@drawable/ic_case"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="start"
                        android:text="@{@string/patient_name_relation(patient.patientName, patient.name, patient.relation)}"
                        android:textColor="@color/color_tick"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_24"
                        android:text="@{@string/gender_birth(patient.gender == 1 ? '男' : '女', data.birthday)}"
                        android:textColor="@color/color_tick"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:paddingLeft="@dimen/dp_24"
                        android:text="@{@string/patient_address(patient.province, patient.city)}"
                        android:textColor="@color/color_tick"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_enter"
                        android:text="历史记录"
                        android:textColor="#339de1"
                        android:textSize="@dimen/font_15" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#eff3f5" />

                <RelativeLayout
                    android:id="@+id/rl_modify_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_default"
                    android:clickable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_61"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_enter"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="@dimen/dp_13"
                        android:paddingRight="@dimen/dp_13"
                        android:text="修改备注"
                        android:textColor="@color/color_tick"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/tv_modify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_35"
                        android:text="@{data.nickname}"
                        android:textColor="#898989"
                        android:textSize="@dimen/font_15" />
                </RelativeLayout>

                <include
                    android:id="@+id/black_list"
                    layout="@layout/item_switch"
                    bind:isChecked="@{data.is_ban == 1 ? true : false}" />

                <include
                    android:id="@+id/allow_call"
                    layout="@layout/item_switch"
                    bind:isChecked="@{data.can_call == 1 ? true : false}" />

                <TextView
                    android:id="@+id/tv_check_history"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_61"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="查找聊天记录"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <TextView
                    android:id="@+id/tv_cancel_history"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_61"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="清除聊天记录"
                    android:textColor="#363636"
                    android:textSize="@dimen/font_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <FrameLayout
                    android:id="@+id/fl_send"
                    android:layout_width="@dimen/dp_283"
                    android:layout_height="@dimen/dp_49"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_21"
                    android:background="@drawable/btn_big_blue"
                    android:clickable="true"
                    app:itemClick="@{AppointMent.handler.chat}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_default"
                        android:gravity="center"
                        android:text="发消息"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_17" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>