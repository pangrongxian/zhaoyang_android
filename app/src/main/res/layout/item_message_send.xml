<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.doctor.sun.entity.im.TextMsg" />

        <variable
            name="adapter"
            type="com.doctor.sun.ui.adapter.MessageAdapter" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/bg_receive_msg"
            android:text="@{data.body}"
            android:textColor="#0072bc"
            android:textSize="@dimen/font_13" />

        <com.doctor.sun.ui.widget.BezelImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@{adapter.myAvatar}"
            app:maskDrawable="@drawable/circle_mask"
            app:placeHolder="@{@drawable/default_avatar}" />
    </RelativeLayout>
</layout>