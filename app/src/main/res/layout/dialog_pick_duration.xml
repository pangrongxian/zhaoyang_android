<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="money"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@color/white"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rg_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="时间:"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_13"
                android:background="@drawable/ic_week_defalut"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="15分钟"
                android:textColor="@color/text_color_gray" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/ic_week_defalut"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="30分钟"
                android:textColor="@color/text_color_gray" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/ic_week_defalut"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="45分钟"
                android:textColor="@color/text_color_gray" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/ic_week_defalut"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="60分钟"
                android:textColor="@color/text_color_gray" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#363636"
            android:textSize="@dimen/font_15"
            app:html='@{@string/description_money("总额：", money + "元")}' />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="@dimen/dp_283"
                android:layout_height="@dimen/dp_49"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_big_blue">

                <!--会诊-->
                <TextView
                    android:id="@+id/tv_pick_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_default"
                    android:gravity="center"
                    android:text="马上预约"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_17" />
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</layout>