<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="#339de1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_default"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:onClick="@{header.onBackClicked}"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:text="@{header.leftTitle}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_13"
                app:drawableLeft="@{header.leftIcon}"
                app:visible="@{header.leftVisible}" />

            <FrameLayout
                android:id="@+id/fl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_35"
                android:background="@drawable/bg_search_doctor"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:hint="搜索"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffffffff"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_search"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:hint="搜索"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="#363636"
                    android:textColorHint="@color/divider_color"
                    android:textSize="@dimen/font_14"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:drawableRight="@drawable/ic_order_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_35"
                android:paddingRight="@dimen/dp_35"
                android:text="评分"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:drawableRight="@drawable/ic_order_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="医院距离"
                android:textColor="#363636"
                android:textSize="@dimen/font_15"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_default"
                android:gravity="center"
                android:text="筛选"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ScrollView
                android:id="@+id/sv_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:text="职称"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15"
                        android:textStyle="bold" />

                    <com.doctor.sun.ui.widget.FlowLayout
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:horizontalSpacing="@{@dimen/dp_6}"
                        android:verticalSpacing="@{@dimen/dp_12}">

                        <TextView
                            android:id="@+id/clear_title"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="不限"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/title_one"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="主任/副主任医师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/title_two"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="主治医师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/title_three"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="心理质询师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/title_four"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="医师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/title_five"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="心理治疗师"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                    </com.doctor.sun.ui.widget.FlowLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:layout_marginTop="@dimen/dp_13"
                        android:text="性别"
                        android:textColor="#363636"
                        android:textSize="@dimen/font_15"
                        android:textStyle="bold" />

                    <com.doctor.sun.ui.widget.FlowLayout
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:horizontalSpacing="@{@dimen/dp_8}"
                        android:verticalSpacing="@{@dimen/dp_12}">

                        <TextView
                            android:id="@+id/clear_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_75"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="不限"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_75"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="男"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:background="@drawable/ic_week_defalut"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_75"
                            android:paddingEnd="@dimen/dp_15"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingStart="@dimen/dp_15"
                            android:text="女"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/font_15" />

                    </com.doctor.sun.ui.widget.FlowLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:background="#ebf0f3"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="所在地"
                            android:textColor="#a2aaae"
                            android:textSize="@dimen/font_15" />


                        <LinearLayout
                            android:id="@+id/fl_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_default">

                            <TextView
                                android:layout_width="@dimen/dp_76"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/colorPrimaryDark"
                                android:drawableLeft="@drawable/ic_location"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_13"
                                android:paddingRight="@dimen/dp_13"
                                android:singleLine="true"
                                android:text="定位"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_15"
                                android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_102"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="省"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_province"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_default"
                            android:drawableRight="@drawable/ic_enter"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_tick"
                            android:textSize="@dimen/font_15" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#c1cacf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_13"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_102"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="市"
                            android:textColor="#363636"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ripple_default"
                            android:drawableRight="@drawable/ic_enter"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_tick"
                            android:textSize="@dimen/font_15" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#c1cacf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_63"
                        android:layout_marginTop="@dimen/dp_13"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_13">


                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <FrameLayout
                            android:layout_width="@dimen/dp_283"
                            android:layout_height="@dimen/dp_49"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_big_blue">

                            <TextView
                                android:id="@+id/confirm"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ripple_default"
                                android:gravity="center"
                                android:text="确 定"
                                android:textColor="#fff"
                                android:textSize="@dimen/font_17" />
                        </FrameLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>


        </FrameLayout>
    </LinearLayout>
</layout>