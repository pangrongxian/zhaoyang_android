<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_default"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:onClick="@{header.onBackClicked}"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:text="@{header.leftTitle}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_13"
                app:drawableLeft="@{header.leftIcon}"
                app:visible="@{header.leftVisible}" />


            <EditText
                android:id="@+id/et_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toRightOf="@id/left_header"
                android:background="@drawable/shape_dialog_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:hint="请输入搜索内容"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_28"
                android:singleLine="true"
                android:textColor="#363636"
                android:textSize="@dimen/font_15" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/et_header"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/ic_clear"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@{header.lineBackground}" />
    </LinearLayout>
</layout>