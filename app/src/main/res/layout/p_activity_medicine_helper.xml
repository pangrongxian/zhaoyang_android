<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="header"
            type="com.doctor.sun.ui.model.HeaderViewModel" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/include_header"
                bind:header="@{header}" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_47"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_phone_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_default"
                        android:clickable="true"
                        android:padding="@dimen/dp_11"
                        android:src="@drawable/ic_voice_call" />

                </FrameLayout>

                <EditText
                    android:id="@+id/input_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_weight="1"
                    android:background="@drawable/bg_msg_input"
                    android:maxHeight="@dimen/dp_100" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="@dimen/dp_47"
                    android:layout_height="@dimen/dp_47"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ripple_default"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_medicine_list"
            android:layout_width="@dimen/dp_270"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_no_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_no_medicine"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_prescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</layout>